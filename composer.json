{
    "name": "petalphp/microlyte-framework",
    "description": "The PetalPHP Microlyte Framework.",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.2",
        "ext-json": "*",
        "monolog/monolog": "^3.7",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.4",
        "psr/cache": "^3.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^3.0",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "slim/twig-view": "^3.4",
        "symfony/console": "^7.1",
        "symfony/finder": "^7.1"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0",
        "phpspec/prophecy-phpunit": "^2.2",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^11.2",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "license": "mit",
    "autoload": {
        "psr-4": {
            "Ultra\\": "src/Ultra/"
        }
    },
    "authors": [
        {
            "name": "jobasco",
            "email": "asamoahjoseph@gmail.com"
        }
    ],
    "minimum-stability": "stable"
}
